<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceCategory
		android:title="Donations">
		<Preference
			android:key="action_1"
			android:title="Remove adverts"
			android:summary="Donate to support development and remove ads">
			<intent
				android:action="android.intent.action.VIEW"
				android:data="market://details?id=com.blork.anpodpro" />
		</Preference>
	</PreferenceCategory>
	<PreferenceCategory
		android:title="More apps">
		<Preference
			android:key="action_3"
			android:title="Apps by Sam Oakley"
			android:summary="View the other apps that I've made">
			<intent
				android:action="android.intent.action.VIEW"
				android:data="market://search?q=Sam Oakley" />
		</Preference>
	</PreferenceCategory>
	<PreferenceCategory
		android:title="Feedback">
		<Preference
			android:key="action_4"
			android:title="App feedback"
			android:summary="Visit uservoice.com to leave your comments and suggestions">
			<intent
				android:action="android.intent.action.VIEW"
				android:data="http://apod.uservoice.com" />
		</Preference>
	</PreferenceCategory>
</PreferenceScreen>