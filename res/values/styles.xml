<resources>

    <style name="Theme.ApodTheme" parent="@style/Theme.Sherlock">
        <item name="abDisplayOptions">showHome|useLogo</item>
        <item name="abLogo">@drawable/title_logo_default</item>
        <item name="vpiTabPageIndicatorStyle">@style/TabPageIndicator</item>
        <item name="vpiTabTextStyle">@style/TabPageIndicator.Text</item>
        <item name="abBackground">@drawable/actionbar_bg</item>
        <item name="abHeight">43dp</item>

        <!--
     		<item name="actionBarSize">50dp</item>
		<item name="abBackground">@drawable/actionbar_gradient</item>
		<item name="abDivider">@color/list_selected</item>
        -->
    </style>

    <style name="ListProgressIndicator" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="SmallListProgressIndicator" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:indeterminate">true</item>
    </style>
    
    <style name="FullScreenDialog" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TabPageIndicator" parent="Widget">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/vpi__tab_indicator</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:paddingRight">12dip</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="TabPageIndicator.Text" parent="Widget">
        <item name="android:textAppearance">@style/TextAppearance.TabPageIndicator</item>
        <item name="android:textColor">@color/vpi__dark_theme</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>