<resources>
    <style name="Theme.ApodTheme" parent="@style/Theme.Sherlock">
		<item name="abDisplayOptions">showHome|useLogo</item>
		<item name="abBackground">@drawable/actionbar_gradient</item>
		<item name="abDivider">@color/list_selected</item>
		<item name="abLogo">@drawable/title_logo_default</item>
		<item name="actionBarSize">50dp</item>
    </style>

    
    <!-- Base application theme is the default theme. -->
    <style name="Theme" parent="android:style/Theme" />

    <!-- Variation on the Light theme that turns off the title -->
    <style name="Theme.IOSched" parent="android:style/Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <!-- custom attributes -->
        <item name="textHeaderMaxLines">3</item>
        <item name="trackAbstractMaxLines">2</item>

    </style>

    <!-- Start with the Holographic Light theme -->
    <style name="Theme.IOSched.Home" parent="style/Theme.IOSched">
        <item name="android:windowBackground">@drawable/background_noise</item>
    </style>


    <style name="ListProgressIndicator" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center</item>
        <item name="android:indeterminate">true</item> 
    </style>


	<style name="SmallListProgressIndicator" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center</item>
        <item name="android:indeterminate">true</item> 
    </style>
    
	<style name="FullScreenDialog" parent="@android:style/Theme.Black.NoTitleBar">
		<item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowFrame">@null</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:backgroundDimEnabled">true</item>
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowNoTitle">true</item>
	</style>
</resources>
